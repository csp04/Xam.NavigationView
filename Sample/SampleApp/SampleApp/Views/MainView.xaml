<?xml version="1.0" encoding="UTF-8"?>
<navView:DefaultView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:navx="clr-namespace:Xam.NavigationView.Navigations.Extensions;assembly=Xam.NavigationView"
             xmlns:views="clr-namespace:SampleApp.Views"
             xmlns:navView="clr-namespace:Xam.NavigationView;assembly=Xam.NavigationView"
             x:Class="SampleApp.Views.MainView">
  <ContentView.Content>
      <StackLayout>
          <Label Text="Hello Xamarin.Forms!" />
            <Button Text="Slide From Bottom" Command="{navx:Push {x:Type views:SlideFromBottomView}}" />
            <Button Text="Slide From Top" Command="{navx:Push {x:Type views:SlideFromTopView}}" />
            <Button Text="Slide From Left" Command="{navx:Push {x:Type views:SlideFromLeftView}}" />
            <Button Text="Slide From Right" Command="{navx:Push {x:Type views:SlideFromRightView}}" />        
        </StackLayout>
  </ContentView.Content>
</navView:DefaultView>